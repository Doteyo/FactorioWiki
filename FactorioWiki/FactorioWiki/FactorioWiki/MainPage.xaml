<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FactorioWiki.MainPage" BackgroundColor="#333333">
    
    <StackLayout>
        <Label Text="Тест списков" TextColor="White" Margin="5" FontSize="Medium"/>

        <ListView x:Name="ItemList" ItemTapped="ItemList_ItemTapped" ItemsSource="{Binding FactorioItems}" HorizontalOptions="StartAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout JustifyContent="Start" AlignItems="Center" BackgroundColor="#242324">
                            <Label Text="{Binding ItemName}" TextColor="White" Margin="5"/>
                            <Image Source="{Binding Picture}"/>
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
    
</ContentPage>
